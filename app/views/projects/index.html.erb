<div id="projects-table">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 style="text-align:left;">Listing Projects</h1>
        <%= link_to 'New Project', new_project_path, class: 'btn btn-default', style: 'float:right;' %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Details</th>
              <th>&nbsp;</th>
              <th>&nbsp;</th>
              <th>&nbsp;</th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td style="text-align:left;"><%= project.name %></td>
                <td style="text-align:left;"><%= project.details %></td>
                <td><%= link_to 'Show', project %></td>
                <td><%= link_to 'Edit', edit_project_path(project) %></td>
                <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>    
      </div>
    </div>
  </div>
</div>

<div id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 title">
        <h2>Portfolio</h2>
        <hr>
      </div>

      <div class="col-md-12 col-sm-12"></div>
      <% @projects.each do |p| %>
        <div class="col-md-3 col-sm-3 wow fadeIn" data-wow-delay="0.6s">
          <%= link_to(show_project_path(p)) do %>
            <%= image_tag("#{p.base_image}", class: 'project-image') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>