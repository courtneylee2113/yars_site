<!DOCTYPE html>
<html>
<head>
  <title>YarsSite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- <script src="https://use.typekit.net/xqc1ygk.js"></script>
	<script>try{Typekit.load({ async: true });}catch(e){}</script> -->
</head>
<body data-spy="scroll" data-target=".navbar-collapse" data-offset="50">
	<% if current_page?(:controller => 'visitor', :action => 'index') %>
		<!-- preloader section -->
		<div class="preloader">
		  <div class="sk-spinner sk-spinner-rotating-plane"></div>
		</div>
		<a href="javascript:" id="return-to-top"><i class="fa fa-chevron-up"></i></a>
		<!-- home section -->
		<section id="home">
		  <div class="container">
		    <div class="row">
		      <div class="col-md-12 col-sm-12">
		        <%= image_tag 'https://s3.amazonaws.com/yarkukhtinprojectimages/logo.svg', class: 'logo' %>
		        <span id="statement">
			        <h1 id="header" class="wow bounce">I make motion graphics & animation.</h1>
			        <a id="portfolio-btn" href="#portfolio" class="btn btn-default smoothScroll">WORK</a>
			        <a id="contact-btn" href="#contact" class="btn btn-default smoothScroll">WHO</a>
			      </span>
		       </div>
		    </div>
		  </div>
		</section>
		<!-- navigation section -->
		<div class="navbar navbar-default navbar-static-top" role="navigation">
		  <div class="container">
		    <div class="navbar-header">
		      <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="icon icon-bar"></span> <span class="icon icon-bar"></span> <span class="icon icon-bar"></span> </button>
		      <a href="#" class="navbar-brand" style="margin-bottom:20px;">YarKukhtin</a></div>
		    <div class="collapse navbar-collapse">
		      <ul class="nav navbar-nav navbar-right">
		        <li><a href="#portfolio" class="smoothScroll">WORK</a></li>
		        <li><a href="#contact" class="smoothScroll">WHO</a></li>
		      </ul>
		    </div>
		  </div>
		</div>
	<% end %>

  <%= yield %>

  <% if current_page?(:controller => 'visitor', :action => 'index') %>
		<footer>
		  <div class="container">
		    <div class="row">
		      <div class="col-md-12 col-sm-12" style="color:black;">
		        <h2 class="wow fadeIn" data-wow-delay="0.9s">Follow Me</h2>
		        <ul class="social-icon">
		          <li>
		          	<a target="_blank" href="https://dribbble.com/yarkukhtin" class="fa fa-dribbble wow bounceIn" data-wow-delay="0.9s"></a>
		          </li>
		          <li>
		          	<a target="_blank" href="https://vimeo.com/yarkukhtin" class="fa fa-vimeo wow bounceIn" data-wow-delay="0.9s"></a>
		          </li>
		          <li>
		          	<a target="_blank" href="https://ca.linkedin.com/in/yarkukhtin" class="fa fa-linkedin wow bounceIn" data-wow-delay="0.9s"></a>
		          </li>
		          <li>
		          	<a target="_blank" href="https://www.instagram.com/yarkukhtin/" class="fa fa-instagram wow bounceIn" data-wow-delay="0.9s"></a>
		          </li>
		        </ul>
		      </div>
		      <div class="col-md-12 col-sm-12 copyright" style="color:black;">
		        <p>Copyright Â© Yar Kukhtin 2016 
		        <!-- | Template by <a target="_blank" rel="nofollow" href="http://www.templatemo.com/tm-469-impulse">Impulse Design</a> --></p>
		      </div>
		    </div>
		  </div>
		</footer>
  <% end %>

</body>
</html>
